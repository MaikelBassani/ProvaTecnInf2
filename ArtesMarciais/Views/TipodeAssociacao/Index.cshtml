@model IEnumerable<ArtesMarciais.Models.TipodeAssociacao>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<center><h2>Tipos de Associação</h2></center>
@if(@Model.Any())
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Periodo</th>
                <th>Mensalidade</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var tipo in Model)
            {
                <tr>
                    <td>@Html.ActionLink(@tipo.nome, "Details", new { tipo.id })</td>
                    <td>@tipo.periodo</td>
                    <td>@tipo.mensalidade</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Não possui nenhuma associação cadastrado.</p>
}

